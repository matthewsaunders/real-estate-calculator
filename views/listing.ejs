<div id="js-listing-info" class="Calculator__row hidden">
  <div class="Listing">
    <div class="Listing__column Listing__facts">
      <h2>Listing</h2>
      <table>
        <tr>
          <td>Address</td>
          <td id="js-listing-address"></td>
        </tr>
        <tr>
          <td>Bed</td>
          <td id="js-listing-bed"></td>
        </tr>
        <tr>
          <td>Bath</td>
          <td id="js-listing-bath"></td>
        </tr>
        <tr>
          <td>Sq. Ft.</td>
          <td id="js-listing-area"></td>
        </tr>
      </table>
    </div>
    <div class="Listing__column Listing__costs">
      <h2>Fixed Costs</h2>
      <table>
        <tr>
          <td>HOA</td>
          <td>
            <input id="js-listing-hoa" type="number" min="0" stpe="0.01" />
          </td>
        </tr>
        <tr>
          <td>Taxes</td>
          <td>
            <input id="js-listing-taxes" type="number" min="0" stpe="0.01" />
          </td>
        </tr>
        <tr>
          <td>Insurance</td>
          <td>
            <input id="js-listing-insurance" type="number" min="0" stpe="0.01" />
          </td>
        </tr>
      </table>
    </div>
    <div class="Listing__column Listing__pricing">
      <h2>Pricing</h2>
      <table>
        <tr>
          <td>List</td>
          <td id="js-listing-list-price"></td>
        </tr>
        <tr>
          <td>Offer</td>
          <td>
            <input id="js-listing-offer-price" type="number" />
          </td>
        </tr>
      </table>
    </div>
    <div class="Listing__column Listing__mortgage">
      <h2>Mortgage</h2>
      <table>
        <tr>
          <td>Down Payment</td>
          <td>
            <input id="js-mortgage-down-payment-percentage" type="number" min="0" max="1" step="0.01" />
          </td>
        </tr>
        <tr>
          <td>Interest Rate</td>
          <td>
            <input id="js-mortgage-interest-rate" type="number" min="0" max="1" step="0.001" />
          </td>
        </tr>
        <tr>
          <td>Duration</td>
          <td>
            <input id="js-mortgage-duration" type="number" />
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
